# === AMBIENTE ===
ENV=dev

# === LOGS ===
LOG_LEVEL=INFO
LOG_JSON=false

# === CORS ===
ALLOW_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8000"]
ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"]
CSP_REPORT_ONLY=false

# === DATABASE (POSTGRES) ===
POSTGRES_CONN_STRING=postgresql://[USER]:[PASSWORD]@[HOST]/[DATABASE]

# === OPENAI ===
OPENAI_API_KEY=sk-proj-your_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7

# === CHROMADB ===
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=documents

# === BCRYPT ===
BCRYPT_ROUNDS=12

# === JWT ===
SECRET_KEY=yor_secret_key_here
JWT_ALGORITHM=HS256
JWT_REFRESH_TOKEN_TTL=604800
MAX_ACTIVE_SESSIONS=4
    
# === TIMEZONE ===
TIME_ZONE=America/Sao_Paulo

# === BREVO (EMAIL) ===
BREVO_API_KEY=xkeysib-your_brevo_api_key_here
BREVO_VERIFICATION_TEMPLATE_ID=1
BREVO_RECOVERY_CODE_TEMPLATE_ID=2
    
# === RECOVERY CODE ===
RECOVERY_CODE_LENGTH=6
RECOVERY_CODE_EXPIRY_MINUTES=15
RECOVERY_CODE_MAX_ATTEMPTS=3
