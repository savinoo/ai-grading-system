# === AMBIENTE ===
ENV=dev

# === LOGS ===
LOG_LEVEL=INFO
LOG_JSON=false

# === CORS ===
ALLOW_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8000", "http://localhost:8080"]
ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"]
CSP_REPORT_ONLY=false

# === DATABASE (POSTGRES) ===
DATABASE_URL=postgresql://[USER]:[PASSWORD]@[HOST]/[DATABASE]

# === RAG & Vector Database ===
CHROMA_PERSIST_DIRECTORY=./data/chromadb
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_PROVIDER=openai
# Para usar Google: EMBEDDING_PROVIDER=google e EMBEDDING_MODEL=text-embedding-004

# === LLM Configuration ===
LLM_PROVIDER=gemini
OPENAI_API_KEY=sk-proj-your_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
LLM_MODEL_NAME=gemini-1.5-flash-002
LLM_TEMPERATURE=0.0
LLM_MAX_RETRIES=3

# === DSPy ===
DSPY_CACHE_DIR=./data/dspy_cache

# === LangSmith (Observability) ===
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT_NAME=ai-grading-backend
LANGSMITH_TRACING_ENABLED=false

# === Grading Workflow ===
DIVERGENCE_THRESHOLD=2.0
RAG_TOP_K=4

# === BCRYPT ===
BCRYPT_ROUNDS=12

# === JWT ===
SECRET_KEY=yor_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_TTL=900
JWT_REFRESH_TOKEN_TTL=604800
MAX_ACTIVE_SESSIONS=4
    
# === TIMEZONE ===
TIME_ZONE=America/Sao_Paulo

# === BREVO (EMAIL) ===
BREVO_API_KEY=xkeysib-your_brevo_api_key_here
BREVO_VERIFICATION_TEMPLATE_ID=1
BREVO_RECOVERY_CODE_TEMPLATE_ID=2
    
# === RECOVERY CODE ===
RECOVERY_CODE_LENGTH=6
RECOVERY_CODE_EXPIRY_MINUTES=15
RECOVERY_CODE_MAX_ATTEMPTS=3

# === FILE UPLOAD ===
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE_MB=200
ALLOWED_MIME_TYPES=["application/pdf"]
